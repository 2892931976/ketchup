{
  "private": true,
  "scripts": {
    "fmt": "prettier --write 'src/js/**/*.ts?'"
  },
  "jest": {
    "roots": ["<rootDir>/src"],
    "modulePaths": ["<rootDir>/src/js"],
    "setupTestFrameworkScriptFile": "<rootDir>/src/test/setup.ts",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "always",
    "bracketSpacing": false,
    "useTabs": false,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "env": {"es6": true, "node": true},
    "extends": "eslint:recommended",
    "rules": {
      "semi": "warn"
    }
  },
  "devDependencies": {
    "@types/codemirror": "^0.0.56",
    "@types/enzyme": "^3.1.10",
    "@types/enzyme-adapter-react-16": "^1.0.2",
    "@types/highlight.js": "^9.12.2",
    "@types/jest": "^22.2.3",
    "@types/lodash-es": "^4.17.0",
    "@types/quill": "^1.3.5",
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "@types/react-modal": "^3.1.2",
    "@types/react-router": "^4.0.23",
    "@types/react-router-dom": "^4.2.6",
    "@types/storejs": "^2.0.1",
    "@types/webfontloader": "^1.6.29",
    "balloon-css": "^0.5.0",
    "bourbon": "^5.0.0",
    "codemirror": "^5.34.0",
    "css-loader": "^0.28.9",
    "date-fns": "^1.29.0",
    "del": "^3.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "gulp": "^3.9.1",
    "gulp-clean-css": "^3.9.2",
    "gulp-plumber": "^1.2.0",
    "gulp-sass": "^4.0.1",
    "gulp-shell": "^0.6.5",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-tslint": "^8.1.2",
    "gutil": "^1.6.4",
    "highlight.js": "^9.11.0",
    "jest": "^22.4.3",
    "lodash-es": "^4.17.5",
    "neat": "^1.2.2",
    "node-sass": "^4.7.2",
    "normalize.css": "^8.0.0",
    "prettier": "^1.12.1",
    "quill": "^1.3.5",
